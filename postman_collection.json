			"name": "1-GetToken",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// ✅ اختبار: تحقق أن كود الاستجابة هو 200\r",
							"pm.test(\"كود الاستجابة هو 200\", function () {\r",
							"    if (pm.response.code == 200) {\r",
							"        pm.response.to.have.status(200);\r",
							"    }\r",
							"    else {\r",
							"        throw new Error(\"فشل الطلب: كود الاستجابة هو \" + pm.response.code);\r",
							"    }\r",
							"});\r",
							"\r",
							"// استرحاع الاجابةكـ JSON.\r",
							"let response = pm.response.json();\r",
							"\r",
							"// ✅ تحقق من وجود التوكن، وإطلاق خطأ إن لم يوجد\r",
							"pm.test(\"الاجابة صحيحة و تحتوي على token\", function () {\r",
							"    if (response.results && response.results.length > 0 && response.results[0].key) {\r",
							"        pm.globals.set(\"token\", response.results[0].key);\r",
							"    } else {\r",
							"        throw new Error(\"الرد لا يحتوي على 'token'.\");\r",
							"    }\r",
							"});\r",
							"\r",
							"\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
